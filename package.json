{
  "name": "copypaste",
  "version": "1.0.0",
  "description": "CopyPaste",
  "targets": {
    "public": {
        "source": "./src/views/index.html",
        "distDir": "./dist/views"
    },
    "default": {
      "distDir": "./dist"
    }
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "socket.io": "^4.4.1",
    "swig": "^1.4.2"
  },
  "scripts": {
    "run": "nodemon ./dist/app.js && cp -r  ./src/views ./dist/views",
    "watch-parcel": "npx parcel watch",
    "tsc-watch": "tsc --watch"
  },
  "plugins": [
    "transform-async-to-generator"
  ],
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^17.0.13",
    "@types/ws": "^8.2.2"
  }
}
